pipeline {
    agent {
        docker { image 'ubuntu' }
    }
    environment {
      tomcatserver = '192.168.0.21'
    }
    
    stages {
        stage('Aqua Scanner') {
          steps {
            aquaMicroscanner imageName: 'ubuntu', notCompliesCmd: 'exit 1', onDisallowed: 'ignore', outputFormat: 'json'
                sh ''
            }
          }
        }
      }
