pipeline {
    agent {
        docker { image 'ubuntu:latest' }
    }
    environment {
      tomcatserver = '192.168.0.21'
    }
    
    stages {
        stage('Aqua Scanner') {
          steps {
            aquaMicroscanner imageName: 'alpine:latest', notCompliesCmd: 'exit 1', onDisallowed: 'ignore', outputFormat: 'json'
                sh 'echo success'
            }
          }
        }
      }
